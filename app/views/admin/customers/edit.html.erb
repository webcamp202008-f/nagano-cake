<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

  <h2><%= @customer.family_name %><%= @customer.first_name %>さんの会員情報編集</h2>

    <%= form_for(@customer, url: admin_customer_path) do |f| %>

    <table class="row table">
      <tr>
        <th class="col-xs-2"><%= f.label :会員ID %></th>
        <td class="col-xs-10"><%= f.text_field :id  , class:"form-control"%></td>
      </tr>

      <tr>
        <th><%= f.label :氏名 %></th>
        <td><%= f.text_field :family_name, class:"form-control" %><br>
            <%= f.text_field :first_name, class:"form-control" %>
        </td>
      </tr>

      <tr>
        <th><%= f.label :フリガナ %></th>
        <td><%= f.text_field :family_name_kana, class:"form-control" %><br>
        <%= f.text_field :first_name_kana, class:"form-control" %>
        </td>
      </tr>

      <tr>
        <th><%= f.label :郵便番号 %></th>
        <td><%= f.text_field :post_code, class:"form-control" %></td>
      </tr>

      <tr>
        <th><%= f.label :住所 %></th>
        <td><%= f.text_field :address, class:"form-control" %></td>
      </tr>

      <tr>
        <th><%= f.label :電話番号 %></th>
        <td><%= f.text_field :phone_number, class:"form-control" %></td>
      </tr>

      <tr>
        <th><%= f.label :メールアドレス %></th>
        <td><%= f.text_field :email , class:"form-control"%></td>
      </tr>

      <tr>
        <th><%= f.label :会員ステータス %></th>
        <td><%= f.radio_button :is_active, :false  %>
          <%= f.label :is_active, "有効"  %>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "退会済み" %></td>
      </tr>
    </table>


      <div class="row text-right">
        <%= f.submit "変更を保存する" ,class: "btn btn-success " %>
      </div>
    <% end %>

  </div>
</div>
