  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">

      <h2>ジャンル追加・一覧画面</h2><br>

      <div class="form-group col-md-10">
      <%= form_for(@genre, url: admin_genres_path) do |f| %>


            <%= f.label :ジャンル %>
            <%= f.text_field :name,class: "col-md-4" %>

            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効"  %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "無効" %>
            <%= f.submit "追加" ,class: "btn btn-primary" %>

      <% end %>
      </div>

    <br>
      <table class="table genre-index">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <% if genre.is_active %>
                有効
                <% else %>
                無効
                <% end %>
              </td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary" %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>