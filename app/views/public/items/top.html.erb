<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<div class="row">
  <div class="col-xs-2">
    <!-- ジャンルのサイドバーを表示 -->
    <%= render "public/items/sidebar", genres: @genres %>
  </div>

  <div class="col-xs-9 col-xs-offset-1">


    <div class="welcome-field">
      <h1 class="welcome-text">ようこそ、NaganoCakeへ！</h1>

        <div class="a">
        <div class="b"><img class="c" src="assets/cake.jpg"></div>
        <div class="b"><img class="c" src="assets/choco.jpg"></div>
        <div class="b"><img class="c" src="assets/trat.jpg"></div>
        </div>


        <p class="advice">会員でない方も商品の閲覧はできますが、<br>
        購入には会員登録が必要になります。<br>
        </p>
    </div>

        <h3 class="recommended-items" style="font-family: HiraMinPro-W6; color: #000000;">オススメ商品</h3>

        <!-- 商品を4つ表示するようにする -->
        <div class="col-xs-9 col-xs-offset-1">
            <div class="item--card-content">
                <% @items.last(4).each do |item| %>
                <% if item.genre.is_active == true && item.is_active == false %>
                    <div class="col-xs-3" style="padding-right: 0px; padding-left: 0px;">
                        <%= link_to item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
                            <%= attachment_image_tag item, :image, :fill, 145, 125, format: 'jpeg',fallback: "no_image.jpg", size:'145x125' %><br>
                            <%= item.name %><br>
                            ¥<%= item.price.to_s(:delimited, delimiter: ',') %>
                        <% end %>
                    </div>
                <% else %>
                <% end %>
                <% end %>
            </div>
        </div>


    </div>
    <h3><%= link_to "もっと見る", items_path, class: "pull-right", style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" %></h3>
</div>
