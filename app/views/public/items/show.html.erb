<div class="row">
  <div class="col-xs-2">
    <%= render 'public/items/sidebar', genres: @genres %>
  </div>

  <% if @item.is_active == false && @item.genre.is_active == true %>


	<div class="col-xs-4 col-xs-offset-1">
	  <%= attachment_image_tag @item, :image, :fill, 300, 250, format: 'jpeg',fallback: "no_image.jpg", size:'380x300' %>
	</div>
	<%= form_for(@cart_item , url: cart_items_path(item_id: @item), method: :post) do |form| %>
	<div class="col-xs-5">
	    <div class="namexx"><%= @item.name %></div>
		<p class="introduction">~🐾introduction~"</p>
		<p class="int"><%= "#{@item.introduction}" %></p>
		<div class="items-box">
		  <div class="col-xs-6">
		    <p class="item-content2", style="font-family: arial black">¥ <%= ((@item.price*1.1).floor).to_s(:delimited, delimiter: ',') %> (税込)</p>
	        <p><%= form.select :quantity, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6],['7個', 7], ['8個', 8], ['9個', 9]]%></p>
	      </div>
		  <div class="col-xs-6">
		    <p><%= form.submit "カートに入れる🐾", class:"btn btn-primary"%></p>
	      </div>
	   </div>
	</div>

	<% end %>

  <% else %>

    <div class="col-xs-4 col-xs-offset-1">
      <%= attachment_image_tag @item, :image, :fill, 300, 250, format: 'jpeg',fallback: "no_image.jpg", size:'380x300' %>
    </div>
    <%= form_for(@cart_item , url: cart_items_path(item_id: @item), method: :post) do |form| %>
      <div class="col-xs-5">
	    <div class= "text-danger"><%= "#{item.name}"+" " +"販売中止" %></div>
	    <p><%= @item.introduction %></p>
	      <div class="col-xs-6">
			<p class="item-content2", style="font-family: arial black"></p> ¥ <%= ((@item.price*1.1).floor).to_s(:delimited, delimiter: ',') %>(税込)
		    <p><%= form.select :quantity, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6],['7個', 7], ['8個', 8], ['9個', 9]]%></p>
          </div>
	      <div class="col-xs-6">
	        <p>販売停止中</p>
          </div>
      </div>
    <% end %>
  <% end %>
</div>

