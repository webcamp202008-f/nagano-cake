<div class="container">
<div class="row">
	<div class="col-xs-2">
		<%= render 'public/items/sidebar', genres: @genres %>
	</div>

<div class="col-xs-4 col-xs-offset-1">
<%= attachment_image_tag @item, :image, :fill, 300, 250, format: 'jpeg',fallback: "no_image.jpg", size:'380x300' %>
<%= form_for(@cart_item , url: cart_items_path(item_id: @item), method: :post) do |form| %>
</div>
<div class="col-xs-5">
	<h3><%= @item.name %></h3>
	<p><%= @item.introduction %></p>
	<div class="col-xs-6">
	<p><%= form.select :quantity, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6],['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %></p>
</div>
	<div class="col-xs-6">
	<p><%= form.submit "カートに入れる", class:"btn btn-primary"%></p>
</div>
<% end %>
</div>
</div>
</div>