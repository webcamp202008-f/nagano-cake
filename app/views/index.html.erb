


<h2> 商品一覧(全<%= @items_all.count %>件) </h2>

<% @items.each do |item| %>
  <%= link_to item_path(item.id) do %>
  <%= attachment_image_tag item, :image, :fill, 200, 150, format: 'jpeg',fallback: "no_image.jpg" %><br>
  <%= item.name %>
  ¥<%= item.price.to_s(:delimited, delimiter: ',') %>
  <%= end %>

<% end %>
